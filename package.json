{
  "name": "@electron/lint-roller",
  "version": "0.0.0-development",
  "description": "Markdown linting helpers for Electron org repos",
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "electron-markdownlint": "./dist/bin/markdownlint-cli-wrapper.js",
    "electron-lint-markdown-links": "./dist/bin/lint-markdown-links.js",
    "electron-lint-markdown-standard": "./dist/bin/lint-markdown-standard.js"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "yarn run build",
    "lint:eslint": "eslint \"{bin,lib,markdownlint-rules,tests}/**/*.{js,ts}\"",
    "lint:eslint:fix": "eslint --fix \"{bin,lib,markdownlint-rules,tests}/**/*.{js,ts}\"",
    "lint:markdown": "yarn run build && node ./dist/bin/markdownlint-cli-wrapper.js \"*.md\" && node ./dist/bin/lint-markdown-links.js --root . \"*.md\"",
    "lint:prettier": "prettier --check \"{bin,lib,markdownlint-rules,tests}/**/*.{js,ts}\"",
    "lint:prettier:fix": "prettier --write \"{bin,lib,markdownlint-rules,tests}/**/*.{js,ts}\"",
    "lint": "yarn run lint:prettier && yarn run lint:markdown",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:prettier:fix",
    "test": "yarn run build && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron/lint-roller.git"
  },
  "author": "David Sanders <dsanders11@ucsbalum.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electron/lint-roller/issues"
  },
  "homepage": "https://github.com/electron/lint-roller#readme",
  "devDependencies": {
    "@continuous-auth/semantic-release-npm": "^3.0.0",
    "@electron-internal/eslint-config": "^1.0.1",
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/markdown-it": "^12.2.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.14.0",
    "@types/node-fetch": "^2.6.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@dsanders11/vscode-markdown-languageservice": "^0.3.0",
    "glob": "^8.1.0",
    "markdown-it": "^13.0.1",
    "markdownlint-cli": "^0.33.0",
    "mdast-util-from-markdown": "^1.3.0",
    "minimist": "^1.2.8",
    "node-fetch": "^2.6.9",
    "standard": "^17.0.0",
    "unist-util-visit": "^4.1.2",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.7"
  }
}
